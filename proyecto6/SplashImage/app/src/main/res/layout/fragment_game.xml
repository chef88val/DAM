<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="game"
    android:id="@+id/fragment_game"
    tools:context="cowapps.js_cmd.splashimage.GameFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_orange_light"
        android:gravity="fill_vertical|center_horizontal"
        style="@style/Base.TextAppearance.AppCompat.Medium.Inverse"
        android:textStyle="normal|bold"
        android:textSize="26sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_User"
        android:layout_gravity="top|left"
        style="@style/Base.TextAppearance.AppCompat.Medium.Inverse"
        android:textStyle="normal|bold"
        android:textSize="26sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_PTOS"
        android:layout_gravity="top|right"
        style="@style/Base.TextAppearance.AppCompat.Medium.Inverse"
        android:textStyle="normal|bold"
        android:textSize="26sp" />

    <GridLayout
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="3"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal">

        <ImageButton android:text="Celda 1.1" android:src="@drawable/dado1_6"
            android:id="@+id/dado11"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_height="60dp" />
        <ImageButton android:text="Celda 1.2" android:src="@drawable/dado2_6"
            android:id="@+id/dado12"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_height="60dp" />
        <ImageButton android:text="Celda 1.3" android:src="@drawable/dado3_6"
            android:id="@+id/dado13"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_height="60dp" />

        <ImageButton android:text="Celda 2.1" android:src="@drawable/dado4_6"
            android:id="@+id/dado21"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_height="60dp" />

        <ImageButton android:text="Celda 2.2" android:src="@drawable/dado5_6"
            android:id="@+id/dado22"
            android:layout_row="1"
            android:layout_column="2"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_height="60dp" />

        <ImageButton android:text="Celda 2.3" android:src="@drawable/dadodoce_1"
            android:id="@+id/dado31"
            android:adjustViewBounds="true"
            android:layout_row="2"
            android:layout_column="1"
            android:scaleType="fitCenter"
            android:layout_height="60dp" />

        <ImageButton android:text="Celda 3.1" android:src="@drawable/suma"
            android:id="@+id/dado41"
            android:adjustViewBounds="true"
            android:layout_row="2"
            android:layout_column="0"
            android:scaleType="fitCenter"
            android:layout_height="60dp" />

        <ImageButton
            android:text="Celda 3.1"
            android:id="@+id/dado42"
            android:src="@drawable/resta"
            android:adjustViewBounds="true"
            android:layout_row="2"
            android:layout_column="2"
            android:scaleType="fitCenter"
            android:layout_height="60dp" />


    </GridLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Operacion:"
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                style="@style/Base.TextAppearance.AppCompat.Medium.Inverse"
                android:textStyle="normal|bold"
                android:textSize="26sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_Op"
                android:layout_weight="1" />
        </LinearLayout>

        <Button
            android:text="Math Dice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_op" />
    </LinearLayout>

</FrameLayout>
